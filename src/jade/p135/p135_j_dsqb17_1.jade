doctype transitional
html(xmlns="http://www.w3.org/1999/xhtml" xml:lang="en")
  head
    title DSQB-2-透支额度开通确认（无副机）
    include ../public/_header
  body
    div.pa.pr.wrap.top-up
      div.pa.header.lt
        div.pa.balance-icon.ic2
        div.pa.balance.b2
          em.text-white 账户余额：
          em.text-yellow 1000.00
          em.text-white 元
        //- a#hdupbtn.pa.hd-up-btn(href="#" onfocus="showdiv('hdup')" onblur="closediv('hdup')" style="z-index=1")
        //-   img(src="static/images/p135_topup_btn.jpg")
        //- div.pa.hd-up-btn.img.nom(style="z-index=2")
        //- div#hdup.pa.hd-up-btn.img.focus(style="visibility:hidden;")
      div.pa.container
        form(action="www.baidu.com")
          .pa.icon-account
          div.pa.info.info4
            em.text-white 账户余额不足，还需
            em.text-yellow 20.00
            em.text-white 元。
          div.pa.info.info5
            em.text-white 由于您消费情况良好，享有
            em.text-yellow 210
            em.text-white 元的透支额度特权，现开通透支额度可提前消费哦！
          div.pa.bx.credits
            input(type="checkbox" checked="checked" disabled="disabled")
            em.text-white 同意
            a.link(href="#") 《透支额度电子协议》
          a#btn-not.pa.btn-dredge(href="javascript:;" onfocus="showdiv('btn-dredge')" onblur="closediv('btn-dredge')")
            img(src="../static/images/p135_btn_dredge.png")
          div.pa.btn-dredge.nom
          div#btn-dredge.pa.btn-dredge.focus(style="z-index:5;visibility:hidden;")
          a.pa.btn.btn-withhold(href="#" onfocus="showdiv('btn-withhold')" onblur="closediv('btn-withhold')")
            img(src="../static/images/btn_withhold.jpg")
          .pa.btn.btn-withhold.nom
          .pa#btn-withhold.btn.btn-withhold.focus(style="visibility:hidden;")
      include ../public/_footer
  script(type='text/javascript').
    /**
    * 机顶盒编号
    * @method base.tbId
    * @since p53
    * @type string
    * @default 00000000000
    */
    //base.tbId = window.guangxi ? guangxi.getStbNum() || guangxi.System.newwork.macAddress.replace(/:/g, '').replace(/No Card/g, '') || doc.all.ip.value : '00000000000';
    /**
    * 机顶盒类型
    * @method base.tbType
    * @since p53
    * @type string
    * @default 0000
    */
    //base.tbType = window.iPanel ? /(Safari)|(Chrome)|(Firefox)/.test(navigator.userAgent) ? base.tbId.length == 11 && base.tbId.substring(2, 4) == '19' ? '0002' : window.iPanel.getGlobalVar('RESOLUTION_1280_720') ? '0003' : '0002' : '0001' : '0000';
    //if(base.tbType != (0002 || '0002' || 0003 || '0003'))return false;
